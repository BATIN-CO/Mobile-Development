<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scanresult.ScanResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_scan_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/scan"
            android:textStyle="bold"
            android:layout_gravity="center"
            style="@style/TextAppearance.Material3.HeadlineMedium" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/iv_scan_photo"
                android:layout_width="210dp"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/batik_placeholder"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_scan_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:scrollbarSize="0dp"
            android:overScrollMode="never" />

        <Button
            android:id="@+id/btn_scan_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_gravity="center"
            android:text="@string/scan_back" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>